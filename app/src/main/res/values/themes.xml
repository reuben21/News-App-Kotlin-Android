<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkerSlateGrey</item>
        <item name="colorPrimaryVariant">@color/darkerSlateGrey</item>
        <item name="colorOnPrimary">@color/darkerSlateGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mediumTurquoise</item>
        <item name="colorSecondaryVariant">@color/mediumTurquoise</item>
        <item name="colorOnSecondary">@color/mediumTurquoise</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--    TODO: BOTTOM NAVIGATION BAR COLOR-->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>




    </style>

    <!--    TODO: BOTTOM NAVIGATION BAR COLOR-->
